{% extends "base.html.twig" %}

{% block title %}
    {{ gite.nom }}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    {{ gite.nom }}
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-10">
            {{ gite.description }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <table class="table">
                <tr>
                    <th>Surface</th>
                    <td>{{ gite.surface}} m²</td>
                </tr>
                <tr>
                    <th>Chambre</th>
                    <td>{{ gite.chambre}}</td>
                </tr>
                <tr>
                    <th>Couchage</th>
                    <td>{{ gite.couchage}}</td>
                </tr>
            </table>
        </div>
        <div class="col-md-2">
        </div>
        <div class="col-md-6">
            <h2>équipements</h2>
            <table class="table">
                {% for equipement in gite.equipements %}
                    <tr>
                        <td>
                        {{ equipement.name}}
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div> 
    </div>
{% endblock %}